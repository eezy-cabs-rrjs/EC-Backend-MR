{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "analytics": {
      "type": "application",
      "root": "apps/analytics",
      "entryFile": "main",
      "sourceRoot": "apps/analytics/src",
      "compilerOptions": {
        "tsConfigPath": "apps/analytics/tsconfig.app.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "assets": [
          { "include": "../auth/src/proto/auth.proto", "outDir": "proto" },
          { "include": "../users/src/proto/users.proto", "outDir": "proto" },
          {
            "include": "../payment/src/proto/payment.proto",
            "outDir": "proto"
          },
          {
            "include": "../booking/src/proto/booking.proto",
            "outDir": "proto"
          },
          { "include": "../chat/src/proto/chat.proto", "outDir": "proto" },
          {
            "include": "../verification/src/proto/verification.proto",
            "outDir": "proto"
          },
          { "include": "../drivers/src/proto/drivers.proto", "outDir": "proto" }
        ]
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/auth.proto",
            "outDir": "proto"
          }
        ]
      }
    },
    "booking": {
      "type": "application",
      "root": "apps/booking",
      "entryFile": "main",
      "sourceRoot": "apps/booking/src",
      "compilerOptions": {
        "tsConfigPath": "apps/booking/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/booking.proto",
            "outDir": "proto"
          }
        ]
      }
    },
    "chat": {
      "type": "application",
      "root": "apps/chat",
      "entryFile": "main",
      "sourceRoot": "apps/chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/chat.proto",
            "outDir": "proto"
          }
        ]
      }
    },
    "drivers": {
      "type": "application",
      "root": "apps/drivers",
      "entryFile": "main",
      "sourceRoot": "apps/drivers/src",
      "compilerOptions": {
        "tsConfigPath": "apps/drivers/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/drivers.proto",
            "outDir": "proto"
          }
        ]
      }
    },
    "navigation": {
      "type": "application",
      "root": "apps/navigation",
      "entryFile": "main",
      "sourceRoot": "apps/navigation/src",
      "compilerOptions": {
        "tsConfigPath": "apps/navigation/tsconfig.app.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.app.json"
      }
    },
    "payment": {
      "type": "application",
      "root": "apps/payment",
      "entryFile": "main",
      "sourceRoot": "apps/payment/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/payment.proto",
            "outDir": "proto"
          }
        ]
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/users.proto",
            "outDir": "proto"
          }
        ]
      }
    },
    "verification": {
      "type": "application",
      "root": "apps/verification",
      "entryFile": "main",
      "sourceRoot": "apps/verification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/verification/tsconfig.app.json",
        "assets": [
          {
            "include": "./proto/verification.proto",
            "outDir": "proto"
          }
        ]
      }
    }
  }
}
